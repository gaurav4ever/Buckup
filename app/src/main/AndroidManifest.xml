<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bukup.gauravpc.noteit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permisson.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_main"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Notes.addnote"
            android:label="@string/title_activity_addnote"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Notes.edit_note"
            android:label="@string/title_activity_edit_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dailyDiary.ViewDiary"
            android:label="@string/title_activity_view_diary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dailyDiary.NewPage_Diary"
            android:label="@string/title_activity_new_page__diary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dailyDiary.EditPage_Diary"
            android:label="@string/title_activity_edit_page__diary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BucketList.BucketListMain"
            android:label="@string/title_activity_bucket_list_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BucketList.BucketList_addItem"
            android:label="@string/title_activity_bucket_list_add_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BucketList.BucketList_editItem"
            android:label="@string/title_activity_bucket_list_edit_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Authentication.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".About.AboutUs"
            android:label="@string/title_activity_about_us"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ToDo.ToDoMain"
            android:label="@string/title_activity_to_do_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>