<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.keepy.gauravpc.noteit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.keepy.gauravpc.noteit.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.keepy.gauravpc.noteit.addnote"
            android:label="@string/title_activity_addnote"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.keepy.gauravpc.noteit.viewnotes"
            android:label="@string/title_activity_viewnotes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.keepy.gauravpc.noteit.edit_note"
            android:label="@string/title_activity_edit_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.keepy.gauravpc.noteit.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
