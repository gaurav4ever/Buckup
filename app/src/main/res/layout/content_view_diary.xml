<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    android:background="#efefef"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bukup.gauravpc.noteit.dailyDiary.ViewDiary"
    tools:showIn="@layout/activity_view_diary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/emptyLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What are you upto?"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:id="@+id/t1"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Let's write it down"
                android:gravity="center"
                android:textSize="14sp"
                android:id="@+id/t2"
                android:layout_below="@+id/t1"
                android:textColor="@color/colorPrimaryDark"
                />
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/t2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/new_page_img">
            </RelativeLayout>
        </RelativeLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list"
            android:padding="3dp"
            android:divider="@null"
            android:background="#efefef"
            android:layout_below="@+id/headerLayout"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:scrollbars="none">
        </ListView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="@color/colorPrimary"
            android:id="@+id/headerLayout"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mainHead"
                    >
                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:padding="15dp"
                        android:src="@drawable/ham"
                        android:id="@+id/hamburger_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/hamburger_icon"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="#fff"
                        android:text="Daily Diary"
                        android:textSize="20sp"/>
                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:padding="15dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/calendar"
                        android:id="@+id/calendar_icon"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menulayout"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/navigation_drawer">

        </include>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
