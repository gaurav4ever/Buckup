<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:animateLayoutChanges="true"
    android:background="#0C4A148C">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0C4A148C">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/userLayout">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/img"
                    android:src="@drawable/avatar"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:layout_toRightOf="@+id/img"
                    android:textColor="#000"
                    android:id="@+id/username"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="username@gmail.com"
                    android:layout_toRightOf="@+id/img"
                    android:layout_below="@+id/username"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/email"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:contentPaddingTop="20dp"
                card_view:contentPaddingBottom="20dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="5dp"
                android:id="@+id/info1"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/layer1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="4">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/l1">
                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/rl_icon1">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/notes1"
                                        android:id="@+id/icon1"
                                        />
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/summary_icon"
                                        android:layout_alignParentEnd="true"
                                        />
                                    <TextView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:gravity="center"
                                        android:layout_alignParentEnd="true"
                                        android:textSize="7.5sp"
                                        android:textColor="#fff"
                                        android:id="@+id/count_notes"
                                        android:text="27"/>
                                </RelativeLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rl_icon1"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="#000"
                                    android:text="My Notes"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/l2">
                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/rl_icon2">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/diary"
                                        android:layout_centerHorizontal="true"
                                        android:id="@+id/icon2"
                                        />
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/summary_icon"
                                        android:layout_alignParentEnd="true"
                                        />
                                    <TextView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_alignParentEnd="true"
                                        android:gravity="center"
                                        android:textSize="7.5sp"
                                        android:textColor="#fff"
                                        android:id="@+id/count_diary"
                                        android:text="27"/>
                                </RelativeLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rl_icon2"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="#000"
                                    android:text="Daily Diary"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/l3">
                                <RelativeLayout
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/rl_icon3">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/buket"
                                        android:layout_centerHorizontal="true"
                                        android:padding="0.5dp"
                                        android:id="@+id/icon3"
                                        />
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/summary_icon"
                                        android:layout_alignParentEnd="true"
                                        />
                                    <TextView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_alignParentEnd="true"
                                        android:gravity="center"
                                        android:textSize="7.5sp"
                                        android:id="@+id/count_bucket_list"
                                        android:textColor="#fff"
                                        android:text="27"/>
                                </RelativeLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rl_icon3"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="#000"
                                    android:text="Bucket List"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/l4">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/slam"
                                    android:id="@+id/icon4"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/icon4"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="#000"
                                    android:text="Slam Book"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="#dcdcdc"
                android:id="@+id/extraCard"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:id="@+id/ll1">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:background="#fff"
                            android:id="@+id/shareLayout"
                            android:layout_weight="0.48">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/img1"
                                android:src="@drawable/share"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/img1"
                                android:layout_centerVertical="true"
                                android:textColor="#cd000000"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"
                                android:text="Tell a Friend"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.002">
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:background="#fff"
                            android:id="@+id/rateLayout"
                            android:layout_weight="0.518">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/img2"
                                android:src="@drawable/rate"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="12sp"
                                android:layout_toRightOf="@+id/img2"
                                android:textColor="#cd000000"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="Rate and Review"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll1"
                        android:weightSum="1"
                        android:layout_marginTop="0.5dp"
                        android:id="@+id/ll2">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:id="@+id/feedbackLayout"
                            android:background="#fff"
                            android:layout_weight="0.48">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/img3"
                                android:src="@drawable/facebook"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="12sp"
                                android:layout_toRightOf="@+id/img3"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="#cd000000"
                                android:text="Facebook"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.002">
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:background="#fff"
                            android:id="@+id/aboutUsLayout"
                            android:layout_weight="0.518">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/img4"
                                android:src="@drawable/info2"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/img4"
                                android:layout_centerVertical="true"
                                android:textSize="12sp"
                                android:textColor="#cd000000"
                                android:layout_marginLeft="10dp"
                                android:text="About App"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="Settings"
                android:textSize="18sp"
                android:padding="10dp"/>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="5dp"
                android:id="@+id/info0"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Security"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/t4"
                        android:padding="5dp"
                        android:textSize="15sp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t4"
                        android:id="@+id/rl0">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:text="Set up a pin for Buckup"
                            android:textSize="13sp"
                            android:layout_alignParentStart="true"
                            android:padding="5dp" />
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/pinSwitch"/>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="5dp"
                android:id="@+id/info2"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Data Sync and Backup"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/t1"
                        android:padding="5dp"
                        android:textSize="15sp"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:id="@+id/backupAndSyncInfo"
                        android:layout_toRightOf="@+id/t1"
                        android:src="@drawable/info3"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:id="@+id/rl1"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:text="Allow BUCKUP to Backup and Sync your data "
                            android:textSize="13sp"
                            android:layout_alignParentStart="true"
                            android:padding="5dp" />
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/syncSwitch"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl1"
                        android:id="@+id/rl2">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:id="@+id/divider"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#dcdcdc"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Status"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@+id/divider"
                            android:textColor="@color/colorPrimaryDark"
                            android:id="@+id/syncStatus"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Last Sync date"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@+id/syncStatus"
                            android:id="@+id/syncDate"
                            />
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_margin="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="5dp"
                android:id="@+id/info3"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Data Restore"
                                android:textColor="@color/colorPrimary"
                                android:id="@+id/t2"
                                android:padding="5dp"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:text="Restore data from Cloud"
                                android:textSize="13sp"
                                android:id="@+id/t3"
                                android:layout_below="@+id/t2"
                                android:layout_alignParentStart="true"
                                android:padding="5dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:layout_margin="10dp"
                            android:layout_weight="0.5">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Restore"
                                android:padding="10dp"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_margin="1dp"
                                android:id="@+id/restore"
                                android:background="#fff"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardElevation="0dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardBackgroundColor="@color/colorPrimary"
                android:id="@+id/info4"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="LOGOUT"
                        android:layout_centerHorizontal="true"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:textColor="#fff"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_name2"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>